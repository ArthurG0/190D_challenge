    "import numpy as np\n",
    "\n",
    "\n",
    "def compute_prob( nTrials, numObserved ):\n",
    "    #assuming it's a fair coin, probability is 0.5 of each trial\n",
    "    res = sum(np.random.binomial(nTrials, 0.5, 1000) == numObserved) / 1000\n",
    "    \n",
    "    return res;\n",
    "\n"
   ]
  },
